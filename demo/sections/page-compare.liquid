"name": "Cus compare",
  "settings": [
          {
          "type": "text",
          "id": "ccs_main_heading",
          "label": "Section title"
          }
  	],
        "blocks": [
            {
                "type": "block",
                "name": "block",
                "settings": [

            {
                "type": "text",
                "id": "ccs_heading",
                "label": "Enter location title"
            },
            {
                "type": "richtext",
                "id": "ccs_disc",
                "label": "location info"
            },
            {
                "type": "image_picker",
                "id": "ccs_cus_img",
                "label": "brand image"
            }
          ]
        }
      ],
      "presets": [
